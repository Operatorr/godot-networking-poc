# Server Configuration
PORT=8080

# Database Configuration
DB_HOST=localhost
DB_PORT=5432
DB_USER=omega
DB_PASSWORD=omega_password
DB_NAME=omega_db
DB_SSLMODE=disable

# Database Connection Pool Settings
DB_MAX_OPEN_CONNS=25          # Maximum number of open connections
DB_MAX_IDLE_CONNS=5           # Maximum number of idle connections
DB_CONN_MAX_LIFETIME=5m       # Maximum lifetime of a connection (e.g., 5m, 1h)
DB_CONN_MAX_IDLE_TIME=10m     # Maximum idle time of a connection (e.g., 10m, 30m)

# JWT Configuration
JWT_SECRET_KEY=your-secret-key-change-this-in-production
JWT_ACCESS_TOKEN_EXPIRY=15m   # Access token expiry (e.g., 15m, 1h)
JWT_REFRESH_TOKEN_EXPIRY=7d   # Refresh token expiry (e.g., 7d, 30d)

# Server Regions
AVAILABLE_REGIONS=Asia,Europe,US-West
DEFAULT_REGION=Asia

# Redis Configuration (for future use)
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_DB=0
